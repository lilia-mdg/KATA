<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dip" />
            <gradient android:angle="-90" android:endColor="@color/bright" android:startColor="@color/gray" /><!--1--><!--4-->
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dip" />
            <solid android:color="@color/gray" /><!--3-->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dip" />
            <gradient android:angle="-90" android:endColor="@color/gray" android:startColor="@color/bright" /><!--5--><!--3-->
        </shape>
    </item>
</selector>

